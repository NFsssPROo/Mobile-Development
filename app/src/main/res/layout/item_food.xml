<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@android:color/transparent"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="16dp"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_food"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/klepon"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_title_food"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Klepon"
        android:textColor="@color/white"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="@id/iv_food"
        app:layout_constraintEnd_toEndOf="@id/iv_food"
        app:layout_constraintBottom_toTopOf="@id/tv_description_food"
        />

    <TextView
        android:id="@+id/tv_description_food"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:ellipsize="end"
        android:textSize="12sp"
        android:text="Lorem ipsum dolor sit amet"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="@id/iv_food"
        app:layout_constraintEnd_toEndOf="@id/iv_food"
        app:layout_constraintBottom_toBottomOf="@id/iv_food"
        />



</androidx.constraintlayout.widget.ConstraintLayout>